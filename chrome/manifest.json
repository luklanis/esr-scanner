{
    "name": "ESR client",
    "version": "1.0",
    "background": {
        "scripts": ["background.js", "plainTCPSocket.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content_script.js"]
        }
    ],
    "permissions": [
        "experimental",
        "tabs", 
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "name": "Connect to ESR Scanner",
        "default_icon": "icon.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}
